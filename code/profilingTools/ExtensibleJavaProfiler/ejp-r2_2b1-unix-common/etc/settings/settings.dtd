<!ELEMENT settings
  (default-filters*, filter-customization*, run-program-dialog?, filter-customization*)>

<!ELEMENT default-filters EMPTY>
<!ATTLIST default-filters
  full-names CDATA #REQUIRED
  >
  
<!ELEMENT run-program-dialog EMPTY>
<!ATTLIST run-program-dialog
  source-paths CDATA #IMPLIED
  command-template CDATA #IMPLIED
  >

<!ELEMENT filter-customization (parameter+)>
<!ATTLIST filter-customization
  full-name ID #REQUIRED
  >

<!ELEMENT parameter EMPTY>
<!ATTLIST parameter
  name CDATA #REQUIRED
  value CDATA #REQUIRED
  >